{
  "compilerOptions": {
    "target": "ESNext", // modern JS output
    "useDefineForClassFields": true, // align with future JS
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // what built-ins to include
    "module": "ESNext", // native ES modules
    "moduleResolution": "node", // resolve like Node
    "jsx": "react-jsx", // new JSX transform
    "strict": true, // enable all strict checks
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "skipLibCheck": true, // speed up by skipping d.ts checks
    "resolveJsonModule": true, // import .json files
    "isolatedModules": true, // required by Vite
    "noEmit": true // donâ€™t output .js
  },
  "include": ["src"], // your source files
  "exclude": ["node_modules", "dist"] // ignore these
}
